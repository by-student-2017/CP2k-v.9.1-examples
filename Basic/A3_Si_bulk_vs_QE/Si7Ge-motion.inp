&FORCE_EVAL
  METHOD SIRIUS
  &PW_DFT
    &CONTROL
       PROCESSING_UNIT cpu
       STD_EVP_SOLVER_TYPE lapack
       GEN_EVP_SOLVER_TYPE lapack
    &END CONTROL
    &PARAMETERS
       ELECTRONIC_STRUCTURE_METHOD  pseudopotential
       SMEARING_WIDTH 0.01
       USE_SYMMETRY true
       NUM_MAG_DIMS 0
       GK_CUTOFF 5.0
       PW_CUTOFF 20.00
       ENERGY_TOL 1e-10
       POTENTIAL_TOL 1e-8
       NUM_DFT_ITER 100
       NGRIDK 2 2 2
    &END PARAMETERS
    &ITERATIVE_SOLVER
       ENERGY_TOLERANCE 1e-5
       NUM_STEPS 20
       SUBSPACE_SIZE 4
       TYPE davidson
       CONVERGE_BY_ENERGY 1
    &END ITERATIVE_SOLVER
    &MIXER
       TYPE broyden1
       MAX_HISTORY 8
    &END MIXER
  &END PW_DFT
    &DFT
      &XC
         &XC_FUNCTIONAL
            &LIBXC
               FUNCTIONAL XC_LDA_X
            &END LIBXC
            &LIBXC
               FUNCTIONAL XC_LDA_C_PZ
            &END LIBXC
         &END XC_FUNCTIONAL
      &END XC
    &END DFT
  &SUBSYS
    &CELL
      A [bohr] 10.26253566   0.00000000   0.00000000
      B [bohr]  0.00000000  10.26253566   0.00000000
      C [bohr]  0.00000000   0.00000000  10.26253566
    &END CELL
    &COORD
      SCALED
      Ge  0.00000000  0.00000000  0.00000000
      Si  0.00000000  0.50000000  0.50000000
      Si  0.50000000  0.00000000  0.50000000
      Si  0.50000000  0.50000000  0.00000000
      Si  0.75000000  0.75000000  0.25000000
      Si  0.75000000  0.25000000  0.75000000
      Si  0.25000000  0.75000000  0.75000000
      Si  0.25000000  0.25000000  0.25000000
    &END COORD
    &KIND Si
      POTENTIAL UPF si_lda_v1.uspp.F.UPF.json
    &END KIND
    &KIND Ge
      POTENTIAL UPF ge_lda_v1.4.uspp.F.UPF.json
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Si7Ge
  PRINT_LEVEL MEDIUM
&END GLOBAL
